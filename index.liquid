<main id="page-home">
  <section id="projects" class="card">
    <h2 class="no-top-margin">Projects</h2>
    {%- for project in projects -%}
      <h3>
        <a target="_blank" rel="noopener noreferrer" href="{{ project.url }}">{{ project.title }}</a>
        {% if project.year %} ({{ project.year }}) {% endif %}
      </h3>
      <p>{{ project.description }}</p>
    {%- endfor -%}
  </section>

  {% comment %} TODO: Use linkding API and have a page for my shared bookmarks {% endcomment %}
  <section id="wodm" class="card">
    <h2 class="no-margin">Word of digital mouth</h2>
    <div class="minor-text">Find a new thing!</div>
    {% for category in recommendations %}
      <h3>{{ category[0] | capitalize }}</h3>
      <ul>
        {%- for r in category[1] -%}
          <li>
            <a target="_blank" rel="noopener noreferrer" href="{{ r.url }}">{{ r.title }}</a>
            {% if r.notes %}
              <span class="minor-text">
                {{ r.notes }}
              </span>
            {% endif %}
          </li>
        {%- endfor -%}
      </ul>
    {% endfor %}
  </section>

  <section id="posts" class="card">
    <h2 class="no-top-margin">Posts</h2>
    &nbsp;
    <span><a href="/feed.xml">RSS</a></span>
    <div class="row-left-fill">
      <div>
        {% if collections.posts != empty %}
          <ul>
            {%- for post in collections.posts reversed -%}
              <li>
                {%- if post.data.date %}{{ post.date | locale_date }}&nbsp;{% endif -%}
                <a href="{{ post.page.url }}">
                  {{- post.data.title -}}
                </a>
                {% for tag in post.data.tags %}
                  <span class="minor-text">#{{ tag }}</span>
                {% endfor %}
              </li>
            {%- endfor -%}
          </ul>
        {% else %}
          <p>No posts right now, check back later :)</p>
        {% endif %}
      </div>

      {% comment %} TODO: Add tag sorting if you actually end up with posts here {% endcomment %}
      {% comment %} <div> {% endcomment %}
      {% comment %}   <h3 class="no-top-margin">Tags</h3> {% endcomment %}
      {% comment %}   <ul> {% endcomment %}
      {% comment %}     {% assign ignore_collections = 'all,posts' | split: ',' %} {% endcomment %}
      {% comment %}     {%- for collection in collections -%} {% endcomment %}
      {% comment %}       {% unless ignore_collections contains collection[0] %} {% endcomment %}
      {% comment %}         <li> {% endcomment %}
      {% comment %}           <input type="checkbox" id="tags_checkbox_{{ collection[0] }}"> {% endcomment %}
      {% comment %}           <label for="tags_checkbox_{{ collection[0] }}">#{{ collection[0] }}</label> {% endcomment %}
      {% comment %}         </li> {% endcomment %}
      {% comment %}       {% endunless %} {% endcomment %}
      {% comment %}     {%- endfor -%} {% endcomment %}
      {% comment %}   </ul> {% endcomment %}
      {% comment %} </div> {% endcomment %}
    </div>
  </section>

  {% comment %} TODO: Make a gallery that uses my server as a backend, or git LFS and good compression on a hook? {% endcomment %}
